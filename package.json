{
  "name": "@jayree/sfdx-plugin-prettier",
  "version": "1.2.22",
  "description": "A Salesforce CLI plugin containing a hook that uses prettier to format Salesforce metadata source files retrieved or pulled from Salesforce orgs.",
  "author": "jayree <jayree.git@icloud.com>",
  "type": "module",
  "bugs": "https://github.com/jayree/sfdx-plugin-prettier/issues",
  "dependencies": {
    "@oclif/core": "^1.26.1",
    "@prettier/plugin-xml": "^2.2.0",
    "@salesforce/core": "^3.33.1",
    "@salesforce/kit": "^1.8.3",
    "cli-progress": "^3.11.2",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "ignore": "^5.2.4",
    "marked": "^4.2.12",
    "marked-terminal": "^5.1.1",
    "prettier": "^2.8.3",
    "prettier-plugin-apex": "^1.12.0",
    "semver": "^7.3.8",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@oclif/plugin-command-snapshot": "^3.3.1",
    "@oclif/plugin-help": "^5.2.1",
    "@oclif/test": "^2.3.4",
    "@salesforce/dev-config": "^3.1.0",
    "@salesforce/dev-scripts": "3.1.0",
    "@salesforce/prettier-config": "^0.0.2",
    "@types/chai": "^4.3.4",
    "@types/cli-progress": "^3.11.0",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/jsforce": "^1.11.0",
    "@types/marked": "^4.0.8",
    "@types/marked-terminal": "^3.1.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.2",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "chai": "^4.3.7",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-salesforce": "^1.1.0",
    "eslint-config-salesforce-typescript": "^1.1.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^39.7.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sf-plugin": "^1.7.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "oclif": "^3.6.1",
    "patch-package": "^6.5.1",
    "pinst": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "shx": "^0.3.4",
    "sinon": "^14.0.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/oclif.manifest.json",
    "/CHANGELOG.md"
  ],
  "homepage": "https://github.com/jayree/sfdx-plugin-prettier",
  "keywords": [
    "sfdx-plugin",
    "prettier",
    "hook"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "hooks": {
      "prettierFormat": "./lib/hooks/prettierFormat/hook",
      "postretrieve": "./lib/hooks/postretrieve",
      "update": "./lib/hooks/changelog"
    },
    "devPlugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-command-snapshot"
    ],
    "info": {
      "releasenotes": {
        "distTagUrl": "https://registry.npmjs.org/-/package/@jayree/sfdx-plugin-prettier/dist-tags",
        "releaseNotesPath": "https://github.com/jayree/sfdx-plugin-prettier/tree/main",
        "releaseNotesFilename": "CHANGELOG.md"
      }
    }
  },
  "repository": "jayree/sfdx-plugin-prettier",
  "scripts": {
    "build": "sf-build",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "clean:lib": "shx rm -rf lib && shx rm -rf coverage && shx rm -rf .nyc_output && shx rm -f oclif.manifest.json",
    "compile": "sf-compile",
    "format": "sf-format",
    "lint": "sf-lint",
    "lint-fix": "sf-lint --fix",
    "postcompile": "oclif readme",
    "postinstall": "patch-package",
    "postpack": "shx rm -f oclif.manifest.json",
    "postpublish": "pinst --enable",
    "posttest": "yarn lint && yarn test:deprecation-policy",
    "prepack": "sf-prepack",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "pretest": "sf-compile-test",
    "test": "sf-test",
    "test:deprecation-policy": "./bin/dev.js snapshot:compare",
    "version": "oclif readme"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  }
}
