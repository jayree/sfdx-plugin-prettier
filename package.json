{
  "name": "@jayree/sfdx-plugin-prettier",
  "version": "1.1.4",
  "description": "A hook that uses prettier to format Salesforce metadata source files retrieved or pulled from an org.",
  "author": "jayree <jayree.git@icloud.com>",
  "bugs": "https://github.com/jayree/sfdx-plugin-prettier/issues",
  "dependencies": {
    "@oclif/config": "^1.18.3",
    "@oclif/errors": "^1.3.5",
    "@prettier/plugin-xml": "^1.2.0",
    "@salesforce/core": "^2.35.3",
    "@salesforce/kit": "^1.5.33",
    "cli-progress": "^3.10.0",
    "debug": "^4.3.3",
    "fs-extra": "^10.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-apex": "^1.10.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@oclif/dev-cli": "^1.26.10",
    "@oclif/test": "^2.1.0",
    "@salesforce/dev-config": "^3.0.1",
    "@salesforce/dev-scripts": "2.0.1",
    "@salesforce/prettier-config": "^0.0.2",
    "@types/chai": "^4.3.0",
    "@types/jsforce": "^1.9.41",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chai": "^4.3.6",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-config-salesforce": "^0.1.6",
    "eslint-config-salesforce-typescript": "^0.2.8",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.9.5",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "patch-package": "^6.4.7",
    "pinst": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "sinon": "^13.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.5.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14.17.1"
  },
  "files": [
    "/bin/per-env.js",
    "/lib",
    "/oclif.manifest.json",
    "/CHANGELOG.md",
    "/yarn.lock"
  ],
  "homepage": "https://github.com/jayree/sfdx-plugin-prettier",
  "keywords": [
    "sfdx-plugin",
    "prettier",
    "hook"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "hooks": {
      "prettierFormat": "./lib/hooks/prettierFormat/hook",
      "postsourceupdate": "./lib/hooks/postsourceupdate",
      "postretrieve": "./lib/hooks/postretrieve"
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "jayree/sfdx-plugin-prettier",
  "scripts": {
    "build": "sf-build",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "compile": "sf-compile",
    "format": "sf-format",
    "lint": "sf-lint",
    "lint-fix": "sf-lint --fix",
    "postcompile": "oclif-dev manifest && oclif-dev readme",
    "postinstall": "patch-package",
    "postpack": "rimraf oclif.manifest.json",
    "postpublish": "pinst --enable",
    "prepack": "sf-prepack",
    "prepare": "is-ci || node ./bin/is-sfdx.js || husky install",
    "prepublishOnly": "pinst --disable",
    "pretest": "sf-compile-test",
    "test": "sf-test",
    "version": "oclif-dev manifest && oclif-dev readme"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  }
}
