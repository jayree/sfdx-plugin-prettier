{
  "name": "@jayree/sfdx-plugin-prettier",
  "version": "1.3.47",
  "description": "A Salesforce CLI plugin containing a hook that uses prettier to format Salesforce metadata source files retrieved or pulled from Salesforce orgs.",
  "author": "jayree <jayree.git@icloud.com>",
  "type": "module",
  "bugs": "https://github.com/jayree/sfdx-plugin-prettier/issues",
  "dependencies": {
    "@jayree/changelog": "^1.1.10",
    "@prettier/plugin-xml": "^3.3.1",
    "@salesforce/core": "^6.5.3",
    "@salesforce/sf-plugins-core": "^7.1.14",
    "@salesforce/source-deploy-retrieve": "^10.5.0",
    "cli-progress": "^3.12.0",
    "debug": "^4.3.4",
    "fs-extra": "^11.2.0",
    "ignore": "^5.3.1",
    "prettier": "^3.2.5",
    "prettier-plugin-apex": "^2.1.0",
    "tslib": "^2.6.1"
  },
  "devDependencies": {
    "@oclif/plugin-command-snapshot": "^5.0.9",
    "@oclif/plugin-help": "^6.0.14",
    "@oclif/test": "^3.2.1",
    "@salesforce/dev-scripts": "8.4.0",
    "@types/cli-progress": "^3.11.5",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jsforce": "^1.11.5",
    "@types/prettier": "^3.0.0",
    "c8": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sf-plugin": "^1.17.3",
    "is-ci": "^3.0.1",
    "oclif": "^4.4.19",
    "patch-package": "^8.0.0",
    "pinst": "^3.0.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "/CHANGELOG.md",
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.lock",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/jayree/sfdx-plugin-prettier",
  "keywords": [
    "sfdx-plugin",
    "prettier",
    "hook"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "hooks": {
      "prettierFormat": "./lib/hooks/prettierFormat/hook",
      "scopedPostRetrieve": "./lib/hooks/scopedPostRetrieve",
      "update": "./lib/hooks/changelog"
    },
    "devPlugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-command-snapshot"
    ],
    "info": {
      "releasenotes": {
        "distTagUrl": "https://registry.npmjs.org/-/package/@jayree/sfdx-plugin-prettier/dist-tags",
        "releaseNotesPath": "https://github.com/jayree/sfdx-plugin-prettier/tree/main",
        "releaseNotesFilename": "CHANGELOG.md"
      }
    },
    "topicSeparator": " "
  },
  "repository": "jayree/sfdx-plugin-prettier",
  "scripts": {
    "build": "wireit",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "compile": "wireit",
    "docs": "sf-docs",
    "format": "wireit",
    "lint": "wireit",
    "postpack": "sf-clean",
    "prepack": "sf-prepack",
    "prepare": "patch-package && sf-install",
    "test": "wireit",
    "test:only": "wireit",
    "version": "oclif readme --no-aliases"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile",
        "lint"
      ]
    },
    "compile": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.ts",
        "**/tsconfig.json",
        "messages/**"
      ],
      "output": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "format": {
      "command": "prettier --write \"+(src|test|schemas)/**/*.+(ts|js|json)|command-snapshot.json\"",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "schemas/**/*.json",
        "command-snapshot.json",
        ".prettier*"
      ],
      "output": []
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "messages/**",
        "**/.eslint*",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test": {
      "dependencies": [
        "test:compile",
        "test:only",
        "test:deprecation-policy",
        "lint",
        "test:json-schema"
      ]
    },
    "test:compile": {
      "command": "tsc -p \"./test\" --pretty",
      "files": [
        "test/**/*.ts",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test:deprecation-policy": {
      "command": "node --loader ts-node/esm --no-warnings=ExperimentalWarning \"./bin/dev.js\" snapshot:compare",
      "files": [
        "src/**/*.ts"
      ],
      "output": [],
      "dependencies": [
        "compile"
      ]
    },
    "test:json-schema": {
      "command": "node --loader ts-node/esm --no-warnings=ExperimentalWarning \"./bin/dev.js\" schema:compare",
      "files": [
        "src/**/*.ts",
        "schemas"
      ],
      "output": []
    },
    "test:only": {
      "command": "c8 mocha \"test/**/*.test.ts\"",
      "env": {
        "FORCE_COLOR": "2"
      },
      "files": [
        "test/**/*.ts",
        "src/**/*.ts",
        "**/tsconfig.json",
        ".mocha*",
        "!*.nut.ts",
        ".nycrc"
      ],
      "output": []
    }
  }
}
